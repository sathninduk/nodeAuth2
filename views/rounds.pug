extends layout

block content
  h1 #{title}
  p 
    a(href="/") Home
    |  > 
    a(href="/admin/rounds") Rounds

  a(href="/admin/add-round" class="btn btn-primary" style="margin: 30px 0px 50px 0px; float: right;") + Add New Round
  table(class="table datatables" id="myTable")
    thead 
      tr
        th ID
        th Name
        th Start
        th End 
        th Actions
    tbody
      each val in rounds
        tr
          td #{val.id}
          td #{val.name}
          td #{val.start}
          td #{val.end}
          td 
            form(action="/admin/del-round" method="post") 
              input(type="hidden" value=val.id name="id") 
              button(class="btn btn-danger" type="submit") Remove
      
  div(class="container" style="padding: 0px 10px 50px 10px;")
